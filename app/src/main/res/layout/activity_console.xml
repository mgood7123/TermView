<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.Console">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/Terminal">

    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="@string/clear"
            android:onClick="clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Clear" app:layout_anchorGravity="right|top"
            app:layout_anchor="@+id/Terminal" android:typeface="normal" android:textSize="18sp"
            android:textAllCaps="true" android:textAlignment="center" android:clickable="true"
            android:singleLine="false" android:focusable="true"/>
    <Button
            android:text="exec"
            android:onClick="exe" android:focusable="true" android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_anchor="@+id/Terminal" app:layout_anchorGravity="top|center"/>

</android.support.design.widget.CoordinatorLayout>